<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeWork.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeWork.App"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate local:Views.MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:Views.HomePage}"
            Route="HomePage" />
        <ShellContent
            Title="Staff"
            ContentTemplate="{DataTemplate local:Views.StaffsPage}"
            Route="StaffsPage" />
    </FlyoutItem>
</Shell>
